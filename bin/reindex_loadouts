require __DIR__.'/../inc/root.php';

if($argc === 3) {
	list(, $modtotal, $modcurrent) = $argv;
} else {
	$modcurrent = 0;
	$modtotal = 1;
}

if($modcurrent >= $modtotal) die();

const BATCH_SIZE = 1000;

$offset = 0;
do {
	$q = \Osmium\Db\query_params(
		'SELECT loadoutid
		FROM osmium.loadouts
		WHERE visibility = $1 AND mod(loadoutid, $4) = $5
		ORDER BY loadoutid DESC
		LIMIT $2 OFFSET $3',
		array(
			\Osmium\Fit\VISIBILITY_PUBLIC,
			BATCH_SIZE,
			$offset,
			$modtotal,
			$modcurrent
		)
	);
	$offset += BATCH_SIZE;

	$ids = array();
	while($row = \Osmium\Db\fetch_row($q)) {
		$ids[] = $row[0];
	}

	if($ids === array()) break;

	$in = implode(',', $ids);
	$q = \Osmium\Search\query_select_searchdata('WHERE loadoutid IN ('.$in.')', array());

	while($row = \Osmium\Db\fetch_assoc($q)) {
		\Osmium\Search\index($row);
		echo ".";
	}
} while(true);

echo "\n";