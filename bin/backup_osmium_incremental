namespace Osmium\CLI\BackupOsmium;

require __DIR__.'/../inc/root.php';

date_default_timezone_set('UTC');


if(!file_exists($dir = __DIR__.'/../pgsql/osmium-pg')) {
    mkdir($dir);
    chdir($dir);
    passthru('git init');
    passthru('git config user.name Osmium');
}

$host = \Osmium\get_ini_setting('pg_host');
$port = \Osmium\get_ini_setting('pg_port');
$user = \Osmium\get_ini_setting('pg_user');
$password = \Osmium\get_ini_setting('pg_password');
$dbname = \Osmium\get_ini_setting('pg_dbname');

$dumpto = $dir.'/dump';

passthru('rm -Rf '.escapeshellarg($dumpto));
putenv('PGPASSWORD='.$password);
passthru('pg_dump --host '.escapeshellarg($host)
         .' --port '.escapeshellarg($port)
         .' --username '.escapeshellarg($user)
         .' -F d -Z 0 --file '.escapeshellarg($dumpto)
         .' --schema osmium '.escapeshellarg($dbname));

chdir($dir);

/* Sort dump to generate smaller diffs (pg_dump will use disk order by
 * default). This takes time and memory but will keep the diffs (and
 * the repo) small. GNU sort can handle very large files. */
foreach(glob('dump/*.dat') as $dat) {
    $temp = $dat.'.sortout';
    passthru('head -n -3 '.escapeshellarg($dat).' | sort --parallel=8 --numeric-sort > '.escapeshellarg($temp));
    passthru('tail -n 3 '.escapeshellarg($dat).' >> '.escapeshellarg($temp));
    rename($temp, $dat);
}

passthru('git config user.email '.escapeshellarg(\Osmium\get_ini_setting('uacontact')));
passthru('git add .');
passthru('git commit -m "Autogenerated commit."');
