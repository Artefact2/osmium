namespace Osmium\PruneDatabase;

require __DIR__.'/../inc/root.php';

/* Get rid of old cookie tokens */

\Osmium\Db\query_params(
	'DELETE FROM osmium.cookietokens WHERE expirationdate < $1',
	[ time() - \Osmium\State\COOKIE_AUTH_DURATION - 1 ]
);
